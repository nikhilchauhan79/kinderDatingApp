<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/red_2"
    tools:context=".GenderActivity">

    <Button
        android:layout_width="350dp"
        android:layout_height="50dp"
        android:paddingTop="0dp"
        android:text="Men"
        android:textColor="@color/white"
        android:background="@drawable/button"
        app:layout_constraintVertical_bias="0.4"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        android:id="@+id/button_male"
        app:layout_constraintTop_toTopOf="parent"
       />

    <Button
        android:layout_width="350dp"
        android:layout_height="50dp"
        android:text="Women"
        android:paddingTop="0dp"
        android:background="@drawable/button"
        android:textColor="@color/white"
        app:layout_constraintVertical_bias="0.1"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toBottomOf="@id/button_male"
        app:layout_constraintRight_toRightOf="parent"
        android:id="@+id/button_female" />


    <Button
        android:layout_width="350dp"
        android:layout_height="50dp"
        android:paddingTop="0dp"
        android:text="Both"
        app:layout_constraintTop_toBottomOf="@id/button_female"
        app:layout_constraintVertical_bias="0.1"
        android:background="@drawable/button"
        android:textColor="@color/white"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        android:id="@+id/button_both" />

    <Button
        android:layout_width="100dp"
        android:layout_height="50dp"
        android:textColor="@color/black"
        android:text="Submit"
        android:paddingTop="0dp"
        android:background="@color/white"
        app:layout_constraintTop_toBottomOf="@id/button_both"
        app:layout_constraintVertical_bias="0.4"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        android:id="@+id/button_submit_gender" />


</androidx.constraintlayout.widget.ConstraintLayout>